<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--  overrite default ripple effect color that is grey by default -->
        <item name="android:textColorHighlight">@android:color/white</item>

        <!--  text color primary that is the tool bar title color -->
        <item name="android:textColorPrimary">#000</item>

        <item name="android:textColorSecondary">@android:color/white</item>

        <!-- over write the default color of un checked radio buttons, checkboxed, switch, rating bar etc  -->
        <item name="colorControlNormal">@color/colorPrimary</item>

        <!-- overwrite the default font and text color -->
        <item name="android:fontFamily">@font/kameron</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>


    </style>

</resources>
